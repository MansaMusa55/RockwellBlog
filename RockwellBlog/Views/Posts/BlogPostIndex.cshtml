@using RockwellBlog.Services
@inject IBlogFileService _fileService
@model IEnumerable<Post>

@{
    ViewData["Title"] = "Landing Page";
}

<!-- Main Content-->
<div class="row">
    <div class="col-8 mx-auto">
        @foreach (var post in Model.OrderByDescending(c => c.Created))
        {
            <div class="col mt-2">
                <div class="card border-dark">
                    <img class="img-fluid" src="@_fileService.DecodeImage(post.ImageData, post.ContentType)" />
                    <div class="card-body text-center">

                        <div class="bg-warning">
                            <hr class="card-hr" />
                            <h5 class="card-title">Digital Portfolio</h5>
                            <hr class="card-hr" />
                        </div>
                        <div>
                            <a asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug">
                                <h2 class="post-title">@post.Title</h2>
                                <h3 class="post-subtitle">@post.Abstract</h3>
                            </a>
                            <p class="post-meta">
                                Posted by Samuel Musa on @post.Created.ToString("MMM dd, yyyy")
                            </p>
                        </div>

                        <br />
                        <div class="text-center">
                            <a class="btn btn-dark btn-block btn-outline-warning btn-sm" asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug">Read Full Post</a>
                        </div>



                    </div>
                </div>
            </div>




